{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "context_id": {
        "type": "string",
        "pattern": "^ctx_[a-zA-Z0-9]+$"
      },
      "id": {
        "type": "string"
      },
      "type": {
        "type": "string"
      },
      "file_data": {
        "type": "string"
      },
      "filename": {
        "type": "string"
      },
      "content_type": {
        "type": "string"
      },
      "data": {
        "type": "object"
      }
    },
    "required": ["context_id"],
    "oneOf": [
      {
        "required": ["file_data", "filename"]
      },
      {
        "required": ["data"]
      }
    ]
  }