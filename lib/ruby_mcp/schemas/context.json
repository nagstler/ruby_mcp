{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "pattern": "^ctx_[a-zA-Z0-9]+$"
      },
      "messages": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "role": {
              "type": "string",
              "enum": ["user", "assistant", "system", "tool"]
            },
            "content": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "array",
                  "items": {
                    "oneOf": [
                      {
                        "type": "string"
                      },
                      {
                        "type": "object",
                        "properties": {
                          "type": {
                            "type": "string",
                            "enum": ["text", "content_pointer"]
                          },
                          "text": {
                            "type": "string"
                          },
                          "content_id": {
                            "type": "string"
                          }
                        },
                        "required": ["type"],
                        "allOf": [
                          {
                            "if": {
                              "properties": { "type": { "const": "text" } }
                            },
                            "then": {
                              "required": ["text"]
                            }
                          },
                          {
                            "if": {
                              "properties": { "type": { "const": "content_pointer" } }
                            },
                            "then": {
                              "required": ["content_id"]
                            }
                          }
                        ]
                      }
                    ]
                  }
                }
              ]
            },
            "id": {
              "type": "string"
            },
            "metadata": {
              "type": "object"
            }
          },
          "required": ["role", "content"]
        }
      },
      "metadata": {
        "type": "object"
      }
    }
  }